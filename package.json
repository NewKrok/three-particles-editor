{
  "name": "three-particles-editor",
  "version": "1.0.2",
  "private": false,
  "homepage": "https://github.com/NewKrok/three-particles-editor",
  "dependencies": {
    "@material/theme": "^14.0.0",
    "@newkrok/three-particles": "1.0.3",
    "sass": "^1.71.1",
    "sirv-cli": "^2.0.2",
    "svelte-preprocess": "^5.1.3",
    "three": "0.155.0"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "prepare": "npm run smui-theme-light && npm run smui-theme-dark",
    "smui-theme-light": "smui-theme compile public/build/static/smui.css -i src/theme",
    "smui-theme-dark": "smui-theme compile public/build/static/smui-dark.css -i src/theme/dark",
    "lint": "eslint --ext .js,.svelte src/",
    "format": "prettier --write \"src/**/*.{js,svelte}\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@smui/button": "^7.0.0-beta.16",
    "@smui/card": "^7.0.0-beta.16",
    "@smui/dialog": "^7.0.0-beta.16",
    "@smui/paper": "^7.0.0-beta.16",
    "@smui/tab": "^7.0.0-beta.16",
    "@smui/tab-bar": "^7.0.0-beta.16",
    "@smui/textfield": "^7.0.0-beta.16",
    "@types/three": "^0.175.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.6",
    "smui-theme": "^7.0.0-beta.16",
    "svelte": "^4.2.12",
    "svrollbar": "^0.12.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
